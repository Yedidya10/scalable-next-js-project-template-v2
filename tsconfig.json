{
  "compilerOptions": {
    "noImplicitAny": true, // MUI requires this
    "noImplicitThis": true, // MUI requires this
    "strictNullChecks": true, // MUI requires this
    "allowSyntheticDefaultImports": true, // MUI requires this
    "target": "ES2017",
    "lib": [
      "es6", // MUI requires this
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
